<widgets>
    <boxalino_product_finder type="boxalino_intelligence/widget_productfinder" module="boxalino_intelligence">
        <name>Boxalino Product Finder</name>
        <description type="desc">Create a Boxalino Finder widget.</description>
        <parameters>
            <template>
                <label>Template</label>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <description>Template for the Product Finder.</description>
            </template>
            <finder_url>
                <label>Finder URL Key</label>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <description>URL Key for the finder page.</description>
            </finder_url>
        </parameters>
    </boxalino_product_finder>
</widgets>